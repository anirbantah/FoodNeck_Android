                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="Redeems Coupons"
                android:textColor="#fff"
                android:textSize="20sp" />
        </LinearLayout>

       

